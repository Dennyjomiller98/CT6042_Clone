<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Attack Selection Servlet-->
    <servlet>
        <servlet-name>AttackSelection</servlet-name>
        <servlet-class>servlets.AttackSelection</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttackSelection</servlet-name>
        <url-pattern>/servlets/AttackSelection</url-pattern>
    </servlet-mapping>

    <!--CT6042 Servlets-->
    <servlet>
        <servlet-name>injection</servlet-name>
        <servlet-class>servlets.Injection</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injection</servlet-name>
        <url-pattern>/servlets/Injection</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>xss</servlet-name>
        <servlet-class>servlets.XSS</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>xss</servlet-name>
        <url-pattern>/servlets/XSS</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logging</servlet-name>
        <servlet-class>servlets.Logging</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logging</servlet-name>
        <url-pattern>/servlets/Logging</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>fileTraversal</servlet-name>
        <servlet-class>servlets.FileTraversal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileTraversal</servlet-name>
        <url-pattern>/servlets/FileTraversal</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>sensitiveDataExposure</servlet-name>
        <servlet-class>servlets.SensitiveDataExposure</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sensitiveDataExposure</servlet-name>
        <url-pattern>/servlets/SensitiveDataExposure</url-pattern>
    </servlet-mapping>
</web-app>